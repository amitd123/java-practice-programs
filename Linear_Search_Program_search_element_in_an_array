// Online Java Compiler
// Linear search algoritm to find element index in an array

class HelloWorld {
    
    
    public static int linearSearch(int arr[], int element){
        
        for(int i = 0;i< arr.length;i++){
            if(arr[i] == element){
                return i;
            }
        }
        return -1;
    }
    
    public static void main(String [] args) {
        int array[] = {10,38,84,28,4883,727,20,34};
        int element  = 28;
    int  resultIndex =  linearSearch(array,element);
      if(resultIndex == -1){
          System.out.println("searched element is not in an array");
      }else{
           System.out.println("searched element is in an array at Index "+ resultIndex);
      }
        
    }
}
